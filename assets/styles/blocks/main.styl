.container
    min-height: 100vh;
    width: 100vw;
    @extend $centered_content

.gemstone
    width: 35vmin;
    height: 27vmin;
    @extend $centered_content
    overflow: hidden;

    &__inner
        background: gemstone;
        width: 25vmin;
        height: @width;
        transform: rotate(45deg);
        cursor: pointer;
        overflow: hidden;
        position: relative;
        top: -6vmin;

    &__title
        transform: rotate(-45deg);
        width: 100%;
        height: 100%;
        font-size: 19vmin;
        display: flex;
        justify-content: center;
        align-items: flex-end;
        color: white;
        user-select: none;
